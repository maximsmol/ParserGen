html, body, .root
  width: 100%
  height: 100%

body
  display: table


.root {
  display: flex;
  padding: 2em;
  box-sizing: border-box;

  background-color: #1d1b1a;
  color: #f2f1f0;
}



.fil {
  flex-grow: 1;
}


.tabs {

}

.tab-button-row {
  flex-direction: row;

  border-bottom: 1px solid #5f5d5d;
}

.tab-button-active {
  background-color: #333;
}

.tab-button-active, .tab-button {
  display: inline-block;
  padding: .7em;

  border: 1px solid #5f5d5d;
  border-bottom: none;

  border-radius: .5em .5em 0 0;
  cursor: pointer;
  user-select: none;
}

.tab-active {
}

.tab {
  display: none;
}

.tab-active, .tab {
  padding: 2em 0;
  flex-direction: column;
}


.tab-header {
  display: inline-block;
  border-bottom: 1px solid #a9daf2;
}


.input-regex {
  color: inherit;
  background-color: inherit;
  font-family: monospace;
  padding: .5em;

  border: 1px solid #5f5d5d;
}

.regex-parser-output {
  padding: 1em 0;
  font-family: monospace;
}

.json-tree-subtrees {
  padding-left: 1em;
}

.json-tree-caret {
  padding-right: .5em;
  color: #a9daf2;
  cursor: pointer;
  user-select: none;
}

.json-tree-subtree-closed {
  display: none;
}


.font-150 {
  font-size: 150%;
}
